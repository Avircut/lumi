form(action="#" method="post").form
    p.form__title.title Детали заказа
    .form__inputName.inputGroup
        label(for="inputName") Имя
        input#inputName(type="text" name="name" placeholder="Ваше имя" required)
    .form__inputNumber.inputGroup
        label(for="inputNumber") Номер телефона
        input#inputNumber(type="tel" name="phone" placeholder="Ваш телефон" required pattern="\+?[7-8]{1}\(?[0-9]{3}\)?\-?[0-9]{3}\-?[0-9]{2}\-?[0-9]{2}")
    .form__inputEmail.inputGroup
        label(for="inputEmail") Электронная почта
        input#inputEmail(type="email" name="email" placeholder="Ваш email" required)
    textarea#inputDesc(name="orderdesc", cols="30", rows="10", placeholder="Напишите что-то по заказу, что вы хотели бы уточнить...")
    input(type="submit" name="submit" value="Заказать")  